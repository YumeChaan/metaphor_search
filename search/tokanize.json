{
  "settings": {
    "analysis": {
      "analyzer": {
        "my_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["stop"]
        }
      },
      "filter": {
        "stop": {
          "type": "stop",
          "stopwords": [
            "විසින්",
            "ගත්කරු",
            "රචකයා",
            "ලියන්නා",
            "ලියන",
            "රචිත",
            "ලියපු",
            "ලියව්‌ව",
            "රචනා",
            "කළ",
            "රචක",
            "ලියන්",
            "ලිවූ",
            "වර්ගය",
            "වර්‍ගයේ",
            "වර්ගයේම",
            "වර්ගයේ",
            "වැනි",
            "ඇතුලත්",
            "ඇතුලු",
            "විදියේ",
            "විදිහේ",
            "හොදම"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "Poem Book": {
        "type": "text",
        "analyzer": "my_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "Year": {
        "type": "text",
        "analyzer": "my_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "Poet": {
        "type": "text",
        "analyzer": "my_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "Poem Name": {
        "type": "text",
        "analyzer": "my_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "Line": {
        "type": "text",
        "analyzer": "my_analyzer"
      },
      "Metaphor present or not": {
        "type": "text",
        "analyzer": "my_analyzer"
      },
      "Count of the metaphor": {
        "type": "integer"
      },
      "Metaphorical terms": {
        "type": "text",
        "analyzer": "my_analyzer"
      },
      "Source": {
        "type": "text",
        "analyzer": "my_analyzer"
      },
      "Target": {
        "type": "text",
        "analyzer": "my_analyzer"
      },
      "Interpretation": {
        "type": "text",
        "analyzer": "my_analyzer"
      }
    }
  }
}
